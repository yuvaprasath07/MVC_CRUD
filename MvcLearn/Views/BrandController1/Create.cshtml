@model Brand

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-uppercase text-center">Create Brand</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 border-1 border">
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3 mt-3">
                    <label  class="form-label">Name</label><br />
                    <input asp-for="@Model.Name" class="form-control" />
                 
                </div>
                <div class="mb-3 mt-3">
                    <label class="form-label">Established Year</label><br />
                    <input asp-for="@Model.EstablishedYear" class="form-control" />
                </div>

                <div class="mb-3 mt-3">
                    <label class="form-label">BrandLogo</label><br />
                    <input type="file" name="files" id="uploadbox" class="form-control" />
                </div>
                <div class="mb-3 mt-3">
                    <a asp-controller="BrandController1" asp-action="Index" class="btn btn-danger">Back</a>
                    <button type="submit" class="btn btn-success">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>
