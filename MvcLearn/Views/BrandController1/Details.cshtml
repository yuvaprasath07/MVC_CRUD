@model Brand

<!-- Your HTML code for displaying Brand details -->
<div class="container">
    <div class="card">
        <div class="card-header text-center text-uppercase">
            Brand Details
        </div>
        <div class="card-body">
            @if (Model != null)
            {
                <div class="row">
                    <div class="col-md-8">
                        <!-- Display Brand details -->
                        <div class="row">
                            <div class="col-md-4">
                                <p class="card-text text-uppercase"><strong>Id</strong></p>
                            </div>
                            <div class="col-md-8">
                                <p class="card-text">:@Model.Id</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <p class="card-text text-uppercase"><strong>Brand Name</strong></p>
                            </div>
                            <div class="col-md-8">
                                <p class="card-text">:@Model.Name</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <p class="card-text text-uppercase"><strong>Established Year</strong></p>
                            </div>
                            <div class="col-md-8">
                                <p class="card-text">:@Model.EstablishedYear</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <img src="@Model.BrandLogo" width="100%" />
                    </div>
                </div>
            }
            else
            {
                <p>Brand not found</p>
            }
            <div class="row">
                <div class="col-md-12 text-center">
                    <a asp-controller="BrandController1" asp-action="Index" class="btn btn-danger">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
